@model User

    <div class="pt-4">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <img class="img-fluid d-block profile-image" src="@Model.ProfileImage">
                    <div class="row py-2">
                        <div class="col-md-12">
                            <p>
                                <b>Name: </b>@Model.UserName
                                <br />
                                <b>Location: </b>@Model.UserLocation
                            </p>
                        </div>
                    </div>
                </div>
                <div class="container col-md-9">
                    <div class="row">
                        <div class="col-12 col-md-12">
                            <h2>Edit Profile</h2>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form method="post">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">User Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="UserName" class="form-control" placeholder="Your user name will be visible to others" value="@Model.UserName">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Profile Image URL</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="ProfileImage" class="form-control" placeholder="Enter the URL of an image you'd like to use as your profile picture. Max length is 255 characters" maxlength="254" value="@Model.ProfileImage">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Location</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="UserLocation" class="form-control" placeholder="Please type in the general area you will be using BookCoOP. A city, town, neighborhood, ..." value="@Model.UserLocation">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>