@model User

<form method="post">
    <label>UserName: </label>
    <input type="text" name="UserName" value="@Model.UserName" maxlength="30" />
    <br/>
    <label>Profile Image: </label>
    <input type="text" name="ProfileImage" value="@Model.ProfileImage" maxlength="255" />
    <br />
    <label>Location: </label>
    <input type="text" name="UserLocation" value="@Model.UserLocation" maxlength="255" />
    <br />
    <br />
    <input type="submit" value="Update" />
</form> 