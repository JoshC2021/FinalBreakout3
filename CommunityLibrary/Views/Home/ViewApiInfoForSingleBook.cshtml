        }
        .container{
            display: flex;
        }
        .sideBySide {
            flex: 1;
            border-radius: 25px;
        }
        .sideBySide:first-child{
            margin-right: 20px;
        }
        a{
            justify-content: center;
        }
        button {
            margin: 10px;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            background-color: whitesmoke;
            color: black;
        }
    .Authors {
        display:flex;
    }
        .center{
            flex:1;
            align-content:center;
            justify-content:center;
        }
            button:hover {
                color: rgb(109,178,164);
                background-color: rgba(242,107,58, .2);
            }
</style>